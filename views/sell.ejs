<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell - Sellit</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            --primary: #2C3E50;
            --secondary: #fff;
            --accent: #87CEEB;
            --light: #f0f8ff;
            --dark: #2C3E50;
            --gray: #708090;
        }
        
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }
        
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .form-container {
            background-color: var(--secondary);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 60px auto;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
        }
        
        .form-group input, 
        .form-group textarea, 
        .form-group select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-family: 'Montserrat', sans-serif;
        }
        
        .form-submit {
            background-color: var(--primary);
            color: var(--secondary);
            border: none;
            padding: 12px 30px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%;
        }
        
        .form-submit:hover {
            background-color: #333;
        }
        
        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 36px;
            text-align: center;
            margin-bottom: 40px;
        }

        .image-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }

        .image-preview-item {
            position: relative;
            width: 80px;
            height: 80px;
            border-radius: 5px;
            overflow: hidden;
            border: 2px solid #ddd;
        }

        .image-preview-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .image-preview-item .remove-image {
            position: absolute;
            top: 2px;
            right: 2px;
            background: rgba(220, 53, 69, 0.8);
            color: white;
            border: none;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            cursor: pointer;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image-count {
            margin-top: 5px;
            font-size: 12px;
            color: var(--gray);
        }

        .seller-notice {
            background: var(--secondary);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 600px;
            margin: 60px auto;
            border: 2px solid var(--accent);
        }

        .notice-icon {
            font-size: 48px;
            color: var(--accent);
            margin-bottom: 20px;
        }

        .seller-notice h2 {
            font-family: 'Playfair Display', serif;
            font-size: 28px;
            color: var(--primary);
            margin-bottom: 15px;
        }

        .seller-notice p {
            color: var(--gray);
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .notice-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .notice-actions .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            cursor: pointer;
        }

        .notice-actions .btn-primary {
            background: var(--primary);
            color: var(--secondary);
        }

        .notice-actions .btn-primary:hover {
            background: #333;
        }

        .notice-actions .btn-secondary {
            background: var(--gray);
            color: var(--secondary);
        }

        .notice-actions .btn-secondary:hover {
            background: #5a6268;
        }

        @media (max-width: 768px) {
            .notice-actions {
                flex-direction: column;
                align-items: center;
            }

            .notice-actions .btn {
                width: 100%;
                max-width: 300px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header') %>

    <div class="container">
        <h1 class="section-title">Sell Your Product</h1>
        
        <% if (!isApprovedSeller) { %>
            <div class="seller-notice">
                <div class="notice-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                <h2>Become a Seller First</h2>
                <p>To sell products on Snap Cart, you need to apply and be approved as a seller. This helps maintain quality and trust in our marketplace.</p>
                <div class="notice-actions">
                    <a href="/apply-seller" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Apply to Become a Seller
                    </a>
                    <a href="/dashboard" class="btn btn-secondary">
                        <i class="fas fa-tachometer-alt"></i> View Dashboard
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="form-container">
                <form action="/sell" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Product Name</label>
                        <input type="text" id="title" name="title" required>
                    </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="4" required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="price">Price (â‚¦)</label>
                    <input type="number" id="price" name="price" required>
                </div>
                
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category" required>
                        <option value="">Select a category</option>
                        <option value="textbooks">Textbooks</option>
                        <option value="electronics">Electronics</option>
                        <option value="fashion">Fashion</option>
                        <option value="furniture">Furniture</option>
                        <option value="food">Food & Drinks</option>
                        <option value="books">Books</option>
                        <option value="sports">Sports</option>
                        <option value="beauty">Beauty</option>
                        <option value="services">Services</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="images">Product Images (Max 5)</label>
                    <input type="file" id="images" name="images" accept="image/*" multiple>
                    <small style="color: var(--gray); font-size: 12px;">Upload up to 5 images of your product. The first image will be the main display image.</small>
                    <div id="image-preview" class="image-preview"></div>
                </div>
                
                <div class="form-group">
                    <label for="whatsappMessage">Custom WhatsApp Message (Optional)</label>
                    <textarea id="whatsappMessage" name="whatsappMessage" rows="3" placeholder="Enter a custom message that buyers will see when contacting you via WhatsApp. Leave empty for default message."></textarea>
                    <small style="color: var(--gray); font-size: 12px;">This message will be pre-filled when buyers contact you. Example: "Hi! I'm interested in your [product name]. Is it still available?"</small>
                </div>
                
                <button type="submit" class="form-submit">List Product</button>
            </form>
        </div>
        <% } %>
    </div>

    <script>
        const imageInput = document.getElementById('images');
        const imagePreview = document.getElementById('image-preview');
        let selectedFiles = [];

        imageInput.addEventListener('change', function(e) {
            const files = Array.from(e.target.files);
            
            // Limit to 5 images
            if (files.length > 5) {
                alert('You can only upload up to 5 images.');
                e.target.value = '';
                return;
            }

            selectedFiles = files;
            updateImagePreview();
        });

        function updateImagePreview() {
            imagePreview.innerHTML = '';
            
            selectedFiles.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const previewItem = document.createElement('div');
                    previewItem.className = 'image-preview-item';
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    
                    const removeBtn = document.createElement('button');
                    removeBtn.className = 'remove-image';
                    removeBtn.innerHTML = 'Ã—';
                    removeBtn.onclick = function() {
                        selectedFiles.splice(index, 1);
                        updateImagePreview();
                        updateFileInput();
                    };
                    
                    previewItem.appendChild(img);
                    previewItem.appendChild(removeBtn);
                    imagePreview.appendChild(previewItem);
                };
                reader.readAsDataURL(file);
            });

            // Update image count
            const countDiv = document.createElement('div');
            countDiv.className = 'image-count';
            countDiv.textContent = `${selectedFiles.length}/5 images selected`;
            imagePreview.appendChild(countDiv);
        }

        function updateFileInput() {
            // Create a new DataTransfer object to update the file input
            const dt = new DataTransfer();
            selectedFiles.forEach(file => dt.items.add(file));
            imageInput.files = dt.files;
        }

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            if (selectedFiles.length === 0) {
                e.preventDefault();
                alert('Please select at least one image for your product.');
                return;
            }
        });
    </script>
</body>
</html>